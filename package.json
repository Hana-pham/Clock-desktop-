{
  "name": "clock",
  "version": "1.0.0",
  "description": "A frameless clock widget",
  "author": "Hana Pham",
  "license": "MIT",
  "type": "module",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win nsis"
  },
  "dependencies": {
    "electron-context-menu": "^4.0.4"
  },
  "devDependencies": {
    "electron": "^31.3.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.hanapham.clock",
    "productName": "Clock",
    "directories": { "output": "dist" },
    "files": ["public/**/*", "main.js", "preload.js", "package.json"],
    "win": {
      "target": ["nsis"],
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
